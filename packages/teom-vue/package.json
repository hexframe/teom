{
  "name": "@hexframe/teom-vue",
  "description": "Teom Vue â€” modern UI library.",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./themes/*": "./dist/themes/*",
    "./style.css": "./dist/style.css"
  },
  "files": ["dist"],
  "scripts": {
    "dev": "vite build --watch",
    "build": "pnpm run typecheck && pnpm run build:code",
    "build:code": "vite build",
    "typecheck": "vue-tsc -p tsconfig.json --noEmit",
    "lint:code": "eslint .",
    "lint:code:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "vue": ">=3.2.0"
  },
  "devDependencies": {
    "@hexframe/teom-shared": "workspace:*",
    "@repo/configs": "workspace:*",
    "@types/node": "latest",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "unplugin-vue": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  }
}
